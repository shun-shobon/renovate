{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":disableDependencyDashboard",
    ":prImmediately",
    ":automergePatch",
    ":automergeRequireAllStatusChecks"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "extends": [
      "npm:unpublishSafe",
      "group:linters",
      "helpers:disableTypesNodeMajor"
    ]
  }
}
